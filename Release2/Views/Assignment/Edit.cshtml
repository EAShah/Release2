            @Html.DropDownList("PCID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProbationaryColleague, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LMAssigned, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("LMAssignID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LMAssigned, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "HRIndex")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
